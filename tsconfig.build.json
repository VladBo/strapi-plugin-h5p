{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "admin/src/**/*",
    "server/src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}